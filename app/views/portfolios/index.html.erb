<h1>Portfolio Items</h1>

<% @portfolio_items.each do |item| %>

  <p><%= link_to item.title, portfolio_path(item) %></p>
  <p><%= item.subtitle%></p>
  <p><%= item.body%></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  <%= link_to "Editar", edit_portfolio_path(item) %>
  <%= link_to "Eliminar Portfolio", portfolio_path(item) , method: :delete, data: {confirm:"Â¿Esta seguro de que desea eliminar este elemento"} %>

<% end %>